{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    "dist",
    "build",
    "web-build"
  ]
}
